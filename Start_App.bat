@echo off
rem カレントディレクトリをこのバッチファイルのある場所に移動
cd /d %~dp0

echo ========================================================
echo  アプリケーションを起動しています...
echo  このウィンドウは閉じないでください。
echo  ブラウザが自動的に開きます。
echo ========================================================

rem 仮想環境のPythonを使ってStreamlitを起動
".venv\Scripts\python.exe" -m streamlit run app.py

if errorlevel 1 (
    echo.
    echo エラーが発生しました。環境が正しくセットアップされているか確認してください。
    echo 担当者に連絡する場合は、画面のスクリーンショットを撮ってください。
    pause
)
